# ==============================================================================
# MiniGame Platform - Local Development Environment Template
# ==============================================================================
# Use this file as a template for your local .env file.
# Copy this to '.env' in the root directory.

# --- Database (PostgreSQL) ---
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=minigame

# --- Redis ---
REDIS_HOST=localhost
REDIS_PORT=6379

# --- Security ---
JWT_SECRET=dev_secret_key_dont_use_in_production
JWT_EXPIRES_IN=7d

# --- Application ---
PORT=3000
NODE_ENV=development

# --- CORS (Local development usually allows all, or specific ports) ---
# CORS_ORIGINS=http://localhost:9527,http://localhost:9529
